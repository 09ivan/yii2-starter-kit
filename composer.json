{
    "author": "Eugine Terentev <eugine@terentev.net>",
	"name": "trntv/yii2-starter-kit",
	"description": "Yii 2 Starter Kit Application Template",
	"keywords": ["yii2", "framework", "start", "application template"],
	"type": "project",
	"license": "BSD-3-Clause",
	"support": {
		"issues": "https://github.com/yiisoft/yii2/issues?state=open",
		"forum": "http://www.yiiframework.com/forum/",
		"wiki": "http://www.yiiframework.com/wiki/",
		"irc": "irc://irc.freenode.net/yii",
		"source": "https://github.com/yiisoft/yii2"
	},
	"minimum-stability": "dev",
	"require": {
		"php": ">=5.4.0",
        "ext-intl": "*",
        "ext-mcrypt": "*",
		"yiisoft/yii2": "*",
		"yiisoft/yii2-bootstrap": "*",
		"yiisoft/yii2-swiftmailer": "*",
		"asofter/yii2-imperavi-redactor": "*",
		"yiisoft/yii2-jui": "*",
        "yiisoft/yii2-imagine": "*",
        "mihaildev/yii2-elfinder": "*",
        "trntv/yii2-aceeditor": "*",
        "trntv/system-info": "*",
        "trntv/yii2-file-kit": "*",
        "bower-asset/font-awesome": "4.*",
        "bower-asset/respond": "~1.4.2",
        "bower-asset/html5shiv": "~3.7.2",
        "bower-asset/ionicons": "~1.5.2",
        "bower-asset/flot": "~0.8.3",
        "bower-asset/admin-lte": "~1.2.1"
	},
	"require-dev": {
		"yiisoft/yii2-debug": "*",
		"yiisoft/yii2-gii": "*"
	},
	"suggest": {
        "ext-gmagick": "Gmagick PHP Extension"
	},
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/trntv/system-info.git"
        }
    ],
	"config": {
		"process-timeout": 1800
	},
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "yii\\composer\\Installer::postCreateProject": {
            "setPermission": [
                {
                    "frontend/runtime": "0777",
                    "backend/runtime": "0777",
                    "console/runtime": "0777",
                    "frontend/web/assets": "0777",
                    "backend/web/assets": "0777",
                    "storage": "0777",
                    "environments/local/yii": "0755"
                }
            ],
            "generateCookieValidationKey": [
                "frontend/config/main.php",
                "backend/config/main.php"
            ]
        },
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    }
}
